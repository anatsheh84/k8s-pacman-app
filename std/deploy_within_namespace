apiVersion: apps/v1
kind: Deployment
metadata:
  labels:
    name: pacman
    app.kubernetes.io/name: pacman
  name: pacman
spec:
  replicas: 1
  selector:
    matchLabels:
      name: pacman
      app.kubernetes.io/name: pacman
  template:
    metadata:
      labels:
        name: pacman
        app.kubernetes.io/name: pacman
    spec:
      containers:
        - image: 'quay.io/jpacker/nodejs-pacman-app:green'
          name: pacman
          ports:
            - containerPort: 8080
              name: http-server
---
apiVersion: route.openshift.io/v1
kind: Route
metadata:
  name: pacman
  labels:
    app.kubernetes.io/name: pacman
spec:
  path: /
  to:
    kind: Service
    name: pacman
---
apiVersion: v1
kind: Service
metadata:
  name: pacman
  labels:
    name: pacman
    app.kubernetes.io/name: pacman
spec:
  type: ClusterIP
  ports:
    - port: 80
      targetPort: 8080
      protocol: TCP
  selector:
    name: pacman
    app.kubernetes.io/name: pacman
---
apiVersion: apps/v1
kind: Deployment
metadata:
  labels:
    name: mongo
    app.kubernetes.io/name: pacman
  name: mongo
spec:
  replicas: 1
  selector:
    matchLabels:
      name: mongo
      app.kubernetes.io/name: pacman
  template:
    metadata:
      labels:
        name: mongo
        app.kubernetes.io/name: pacman
    spec:
      containers:
      - image: bitnami/mongodb:latest
        name: mongo
        ports:
        - name: mongo
          containerPort: 27017
        volumeMounts:
          - name: mongo-db
            mountPath: /data/db
      volumes:
        - name: mongo-db
          persistentVolumeClaim:
            claimName: mongo-storage
---
apiVersion: v1
kind: Service
metadata:
  labels:
    name: mongo
    app.kubernetes.io/name: pacman
  name: mongo
spec:
  type: ClusterIP
  ports:
    - port: 27017
      targetPort: 27017
  selector:
    name: mongo
    app.kubernetes.io/name: pacman
---
kind: PersistentVolumeClaim
apiVersion: v1
metadata:
  name: mongo-storage
  labels:
    app.kubernetes.io/name: pacman
spec:
  accessModes:
    - ReadWriteOnce
  resources:
    requests:
      storage: 8Gi
